{
  "configurations": {
    "Launch Project": {
      "adapter": "vscode-go",
      "filetypes": [ "go" ],
      "configuration": {
        "request": "launch",
        "program": "${workspaceRoot}",
        "mode": "auto",
        "dlvToolPath": "$HOME/go/bin/dlv"
      }
    }
  },
    "Launch File": {
      "adapter": "vscode-go",
      "filetypes": [ "go" ],
      "configuration": {
        "request": "launch",
        "program": "${fileDirname}",
        "mode": "auto",
        "dlvToolPath": "$HOME/go/bin/dlv"
      }
    }
  }
}
