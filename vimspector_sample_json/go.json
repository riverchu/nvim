{
  "configurations": {
    "Launch Project": {
      "adapter": "vscode-go",
      "filetypes": [ "go" ],
      "configuration": {
        "request": "launch",
        "program": "${workspaceRoot}",
        "mode": "debug",
        "dlvToolPath": "$HOME/go/bin/dlv",
        "dlvFlags": [ "--check-go-version=false" ]
      }
    },
    "Launch File": {
      "adapter": "vscode-go",
      "filetypes": [ "go" ],
      "configuration": {
        "request": "launch",
        "program": "${fileDirname}",
        "mode": "debug",
        "dlvToolPath": "$HOME/go/bin/dlv"
      }
    },
    "Launch Test":{
      "adapter": "vscode-go",
      "filetypes": [ "go" ],
      "configuration": {
        "request": "launch",
        "program": "${fileDirname}",
        "mode": "test",
        "dlvToolPath": "$HOME/go/bin/dlv",
        "args": [
            "-test.v",
            "-test.run", "${UnitTestFunc}"
        ]
      }
    }
  }
}
